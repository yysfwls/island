<view class="class-container" hidden="{{hidden}}">
  <image class="classic-img {{playing?'rotation': ''}}" src="{{img}}"></image>
  <image class="play-img" src="{{playing?playSrc:pauseSrc}}" bind:tap="onPlay"></image>
  <image class="tag" src="images/music@tag.png"></image>
  <text class="content">{{content}}</text>
</view>